{
    "name": "Roam Copy",
    "version": "1.0",
    "description": "Shortcuts for copying web content with a roam style",
    "permissions": ["activeTab"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "commands": {
     "copy-page": {
       "suggested_key": {
         "mac": "Command+MacCtrl+P"
       },
       "description": "Capture Page"
     },
     "copy": {
       "suggested_key": {
         "mac": "Command+MacCtrl+C"
       },
       "description": "Capture Quote"
     }
    },
    "manifest_version": 2
}